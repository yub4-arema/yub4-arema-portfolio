---
const {sns,id, icon , bgColor, href} = Astro.props;
---

<a class="sns-box" href={href} style={`background-color: ${bgColor};`}>
  <img src={icon} alt={`${sns} icon`} class="sns-icon" />   
  <span>{id}</span>
</a>

<style>
.sns-box {
  display: flex;
  align-items: center;
  text-decoration: none;
  color: inherit;
  padding: 1rem;
  border-radius: 0.5rem;
  margin: auto;
  width: 10rem;
  color: #ffffff;
}
.sns-icon {
  height: 2rem;
  margin-right: auto;
}

</style>