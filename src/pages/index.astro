---
import Layout from "../layouts/Layout.astro";
import Sns from "../components/Sns.astro";
import Footer from "../components/Footer.astro";
import AboutMe from "./aboutme/_about_me.md";

const snsList = [
  {
    sns: "GitHub",
    id: "@yub4-arema",
    icon: "/icons/github-mark-white.svg",
    bgColor: "rgba(30,30, 30, 0.8)",
    href: "https://github.com/yub4-arema",
  },
  {
    sns: "Twitter",
    id: "@yub4_arema",
    icon: "/icons/logo-white.png",
    bgColor: "rgba(0, 0, 0, 0.9)",
    href: "https://twitter.com/yub4_arema",
  },
  {
    sns: "zenn",
    id: "yub4_arema",
    icon: "/icons/logo-only.svg",
    bgColor: "rgba(62,168,255, 0.5)",
    href: "https://zenn.dev/yub4_arema",
  }
];
---

<Layout>
  <div
    class="min-h-screen flex flex-col items-center relative z-[1] text-black/80 text-lg after:content-[''] after:absolute after:top-[10%] after:bottom-[80%] after:left-0 after:right-0 after:bg-[#A60A0A] after:opacity-100 after:-skew-y-[15deg] after:z-0"
  >
    <div class="p-8 w-[75vw] max-w-[50rem] bg-white/80 rounded-[1vh] relative z-10 flex flex-col text-center mt-40">
      <img
        src="/photos/iconpin.png"
        alt="Yubarema Logo"
        class="w-[50vw] max-w-[30rem] rounded-full relative z-10 shadow-[0_4px_24px_#F2DAAC55] mt-[-5rem] mx-auto"
      />
      <h1 class="text-3xl font-bold">湯葉あれま</h1>
      <p class="text-lg">プログラミングができなくてぇ...</p>
      <div class="flex gap-4 mt-8 flex-wrap justify-center">
        {snsList.map(({sns, id, icon, bgColor, href}) => (
          <Sns sns={sns} id={id} icon={icon} bgColor={bgColor} href={href} />
        ))}
      </div>
    </div>
    
    <div class="p-8 mt-8 w-[75vw] max-w-[50rem] bg-white/80 rounded-[1vh] relative z-10 [&_p]:text-lg [&_a]:no-underline [&_a]:text-[#3F4EA6] [&_a]:font-bold">
      <h1 class="text-2xl font-bold">About Me</h1>
      <AboutMe />
    </div>

    <Footer />
  </div>
</Layout>
